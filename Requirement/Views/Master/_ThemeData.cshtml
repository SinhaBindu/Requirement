@model IEnumerable<Requirement.Models.mst_Theme>

<div class="table-responsive">
    <table class="table table-bordered table-hover dt-responsive display tbl small" id="tbl" width="100%">
        <thead>
            <tr>
                <th>Srno.</th>
                <th>Theme Code</th>
                <th>Theme Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                var sno = 1;
                if (Model.Count() > 0)
                {
                    foreach (var row in Model.ToList())
                    {
                        <tr>
                            <td>@(sno++)</td>
                            <td>@row.ThemeCode</td>
                            <td>@row.ThemeName</td>
                            <td>
                                <button class="btn btn-primary btn-sm edit-btn" data-id="@row.ThemeId_pk" data-code="@row.ThemeCode" data-name="@row.ThemeName">Edit</button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No data available</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
